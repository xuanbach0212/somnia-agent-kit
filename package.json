{
  "name": "somnia-ai-agent-framework",
  "version": "2.0.0",
  "description": "A comprehensive framework, SDK, and monitoring tools for designing, deploying, and scaling AI agents on Somnia Network",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "deploy:contracts": "hardhat run scripts/deploy.ts --network somnia",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "verify": "hardhat verify --network somnia",
    "start:monitor": "ts-node src/monitoring/server.ts",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"contracts/**/*.sol\" \"scripts/**/*.ts\" \"examples/**/*.ts\"",
    "clean": "rm -rf dist cache artifacts",
    "example:basic": "ts-node examples/1-basic-agent.ts",
    "example:openai": "ts-node examples/2-llm-agent-openai.ts",
    "example:claude": "ts-node examples/3-llm-agent-claude.ts",
    "example:events": "ts-node examples/4-event-driven-agent.ts",
    "example:tasks": "ts-node examples/5-task-management.ts",
    "example:client": "ts-node examples/monitoring-client-example.ts"
  },
  "keywords": [
    "somnia",
    "ai",
    "agents",
    "blockchain",
    "web3",
    "framework",
    "sdk",
    "monitoring"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.9",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "openai": "^4.20.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "hardhat": "^2.19.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
